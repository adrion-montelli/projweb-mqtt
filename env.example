# ============================================================
# Django Configuration
# ============================================================

# DEBUG: Set to False in production
DEBUG=True

# Django Secret Key (Generate a new one for production)
# You can generate one using: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=django-insecure-change-this-in-production

# Allowed Hosts (comma-separated)
ALLOWED_HOSTS=localhost,127.0.0.1

# ============================================================
# Database Configuration
# ============================================================

# Use MySQL (True/False)
USE_MYSQL=True

# Database Engine: mysql or sqlite3
DB_ENGINE=django.db.backends.mysql

# MySQL Configuration
DB_DATABASE=leituras_db
DB_USERNAME=root
DB_PASSWORD=
DB_HOST=127.0.0.1
DB_PORT=3306

# SQLite (use if USE_MYSQL=False)
# DB_NAME=db.sqlite3

# ============================================================
# Email Configuration (Optional)
# ============================================================

EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# ============================================================
# Security Settings (Production)
# ============================================================

# HTTPS/SSL
SECURE_SSL_REDIRECT=False
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False

# CORS Settings
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# ============================================================
# Application Settings
# ============================================================

# Application Name
APP_NAME=Dashboard de Leituras de Sensores

# Timezone
TIME_ZONE=America/Sao_Paulo

# Language
LANGUAGE_CODE=pt-br







